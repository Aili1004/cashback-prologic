<!-- Wrapper -->
<div id="wrapper">

  <!-- Contact Us -->
  <section id="contact-us-container" class="contact-page">
      <article id="contact-us">

        <!-- Center -->
        <div class="center">
          <h2>Contact</h2>
          <p>Contact Cashback.com.au today to find out how cashback and loyalty programs can help you grow your business.</p>
        </div>


        <!-- Left -->
        <div class="left">

          <!-- Contact Form -->
          <div id="contact-form">
            <input type="text" placeholder="Name" />
            <input type="email" placeholder="Email" />
            <textarea placeholder="Message"></textarea>
            <input type="submit" value="Submit" />
          </div>
        </div>

        <!-- Right -->
        <div class="right">
          <p><%= @address[:line_1] %></p>
          <p><%= @address[:line_2] %></p>
          <p><%= @address[:line_3] %></p>
          <p>Phone: <strong><%= @phone_display %></strong></p>
        </div>

        <div class="clear"><!-- --></div>
      </article>
    </section>


    <!-- Footer -->
    <section id="footer-container">
      <footer id="footer">

        <!-- Footer Logo -->
